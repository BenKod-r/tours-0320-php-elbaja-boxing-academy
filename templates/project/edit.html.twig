{% extends 'base.html.twig' %}

{% block title %}Editer un projet{% endblock %}

{% block body %}
    <section class="project_page_edit text-white">
        <h1 class="project_page_edit_title">Modifier un projet</h1>
        <div class="project_edit_container container">
            <div class="mb-3">
                {{ form_start(form) }}
                    {{ form_widget(form) }}
                    <button class="btn btn-warning mr-4 mt-3">{{ button_label|default('Sauvegarder') }}</button>
                    <a class="btn btn-light mt-3" href="{{ path('project_poster_index', { 'id' : project.id }) }}">Modifier l'image</a>
                {{ form_end(form) }}
            </div>
            {{ include('project/_delete_form.html.twig') }}
            <div class="mt-5">
                <a class="text-white" href="{{ path('project_index') }}">Retour</a>
            </div>
        </div>
    </section>
{% endblock %}

