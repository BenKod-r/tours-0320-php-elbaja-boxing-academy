{% extends 'base.html.twig' %}

{% block title %}All Poster for member{% endblock %}

{% block body %}
    <section class="poster_index">
        <div class="poster_title">
            <h1>Images</h1>
            {% if app.user %}
            <div class="d-flex justify-content-end mr-4">
                <a class="btn btn-success poster_btn" href="{{ path('member_add_poster', {'member' : member.id}) }}">Ajouter une image</a>
            </div>
            {% endif %}
        </div>
        <div class="poster_div d-flex justify-content-center row">
        {% for poster in posters %}
            <div class="poster_figure">
                <figure class="d-flex flex-column col-xs-12 col-lg-6 col-xl-12">
                    <img src="{{ asset ('/images/' ~ poster.slug) }}" />
                    <figcaption class="d-flex justify-content-center align-items-center">{{ poster.fileName }}</figcaption>
                    <a class="poster_btn btn btn-success" href="{{ path('member_new_poster', {'member' : member.id, 'poster' : poster.id}) }}">Ajouter cette image</a>
                </figure>
            </div>
        {% else %}
        </div>
            <p class="poster_p text-white" colspan="7">Aucune image trouv√©e</p>
        {% endfor %}
        
    </section>
{% endblock %}
