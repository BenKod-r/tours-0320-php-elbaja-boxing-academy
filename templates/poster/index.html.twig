{% extends 'base.html.twig' %}

{% block title %}All Poster{% endblock %}

{% block body %}
    <section class="poster_index">
        <div class="poster_title">
        <h1>bibliotheque d'image</h1>
        </div>
        <div class="poster_link">
        {% if app.user %}
            <a class="poster_btn btn btn-success" href="{{ path('poster_new') }}">Ajouter une image</a>
        {% endif %}
        </div>
        <div class="poster_figure row justify-content-start">
        {% for poster in posters %}
            <figure class="col-xs-12 col-lg-6 col-xl-12">
                <img src="{{ asset ('/images/' ~ poster.slug) }}" />
                <figcaption>{{ poster.slug }}</figcaption>
            {{ include('poster/_delete_form.html.twig') }}
            </figure>
            
        {% else %}
            <p class="poster_p text-white" colspan="7">no records found</p>
        {% endfor %}
        </div>
    </section>
{% endblock %}
