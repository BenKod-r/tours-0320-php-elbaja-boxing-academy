<form class="d-flex justify-content-center" method="post" action="{{ path('poster_delete', {'id': poster.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ poster.id) }}">
    <button class="poster_delete btn btn-danger">Suprimer</button>
</form>
