{% extends 'base.html.twig' %}

{% block title %}Event index{% endblock %}

{% block body %}

    <section class="event">
        <div class="event_page">
            <h1 class="event_page_title">ÉVÈNEMENTS</h1>
        </div>
        <div class="event_link">
            <a class="event_btn btn btn-dark" href="{{ path('event_new') }}">Create new</a>
        </div>
        <div class="event_card row justify-content-around">
        {% for event in events %}
            <div class="event_deck card-deck col-xs-12 col-md-6 col-xl-4">
                <div class="event_card card bg-dark text-white">
                    <div class="event_body card-body">
                        <h3 class="event_title card-title">{{ event.name }}</h3>
                        <p class="event_text card-text">{{ event.dateStart ? event.dateStart|date('d/m/Y') : '' }}</p>
                    </div>
                    <div class="event_card_image">
                        <a class="event_link_image" href="{{ path('event_show', {'id': event.id}) }}"><img class="event_image card-img-top" src="{{ asset( event.poster ) }}" alt="Card image cap"  title="Cliquer sur l'image pour en savoir plus !" /></a>
                        <a class="event_show btn btn-success" href="{{ path('event_show', {'id': event.id}) }}">en savoir plus !</a>
                        <a class="event_edit btn btn-success" href="{{ path('event_edit', {'id': event.id}) }}">edit</a>
                    </div>
                </div>
            </div>
            {% else %}
                <p class="event_p"colspan="7">no records found</p>
        {% endfor %}
        </div>
    </section>

{% endblock %}
