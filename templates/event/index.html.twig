{% extends 'base.html.twig' %}

{% block title %}Event index{% endblock %}

{% block body %}
    
    <div class="event_page">
        <h1 class="event_title">ÉVÈNEMENTS</h1>
    </div>
    <div class="">
        {% for event in events %}
        <h2 class="event_name offset-4">{{ event.name }}</h2>
        <div class="event d-flex">
            <img class="event_poster col-lg-3" src="{{ asset( event.poster ) }}" alt="poster_event" />
            <div class="offset-1">
                <p>{{ event.description }}</p>
                <p>{{ event.dateStart ? event.dateStart|date('d/m/Y') : '' }}</p>
                <p>{{ event.dateEnd ? event.dateEnd|date('d/m/Y') : '' }}</p>
            </div>
        </div>
    </div>
    <a href="{{ path('event_show', {'id': event.id}) }}">show</a>
    <a href="{{ path('event_edit', {'id': event.id}) }}">edit</a>
        {% else %}
            <p colspan="7">no records found</p>
        {% endfor %}
    <div class="event_link">
        <a href="{{ path('event_new') }}">Create new</a>
    </div>

{% endblock %}

{% block javascripts %}

{% endblock %}
