{% extends 'base.html.twig' %}
{% block Title %} Contactez Nous{% endblock %}
{% block body %}
    <div class="form mt-4">
    {{form_start(form) }}
    <div class="row">
        <div class="col">{{ form_row(firstname) }}</div>
        <div class="col">{{ form_row(lastname) }}</div>
    </div>
    <div class="row">
        <div class="col">{{ form_row(email) }}</div>
        <div class="col">{{ form_row(subject) }}</div>
    </div>
    {{ form_rest(form) }}
    <div class="form-group">
        <button class="btn btn-primary">Envoyer</button>
    </div>
    {{form_end(form) }}
    </div>
{% endblock %}